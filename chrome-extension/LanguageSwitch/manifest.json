{
  "name": "Language Switch",
  "description": "Easy Change Chrome Language to test i18n",
  "version": "0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons":{
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background":{
    "scripts": [
      "js/jquery-1.9.0.min.js",
      "js/storage.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Language Switch",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}