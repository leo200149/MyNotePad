{
  "name": "Regex Search",
  "description": "use regex in serach web page",
  "version": "1",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "declarativeContent",
    "http://*/*",
    "https://*/*"
  ],
  "icons":{
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Regex Search",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css":[
        "css/background.css"
      ],
      "js": [
        "js/jquery-1.9.0.min.js",
        "js/background.js"
      ]
    }
  ],
  "commands": {
    "_execute_browser_action": {  
      "suggested_key": {  
        "default": "Ctrl+Shift+F",  
        "windows": "Ctrl+Shift+F",   
        "mac": "Ctrl+Shift+F"
      }
    }  
  },
  "manifest_version": 2
}